
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<!--MAIN VIEW LAYOUT PROTOTYPE-->
<div class="row" id="top-row">
    <div class="col-md-4"></div><div class="col-md-4" id="top"></div><div class="col-md-4"></div>
</div>
<div class="row" id="middle-row">
    <div class="col-md-4" id="left"></div><div class="col-md-4"></div><div class="col-md-4" id="right"></div>
</div>
<div class="row" id="bottom-row">
    <div class="col-md-4"></div><div class="col-md-4" id="bottom"></div><div class="col-md-4"></div>
</div>

@section scripts{

    <script src="~/Scripts/jquery.signalR-2.2.1.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/jquery.spin.js"></script>

    <script type="text/javascript">
        var gameHub;

        $(function () {

            gameHub = $.connection.gameHub;

            $.connection.hub.logging = true;

            $.connection.hub.error(function (error) {
                console.log('SignalR error: ' + error)
            });

            $.connection.hub.start().done(function () {

            }).fail(function () {
                console.log("Hub start failed")
            });

        })();

    </script>
    
}